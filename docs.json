{
  "$schema": "https://mintlify.com/docs.json",
  "_commented_out_demo_content": {
    "_note": "Mintlify demo content - kept for reference but not rendered",
    "essentials_group": {
      "group": "Essentials",
      "pages": [
        "essentials/markdown",
        "essentials/code",
        "essentials/images",
        "essentials/settings",
        "essentials/navigation",
        "essentials/reusable-snippets"
      ]
    },
    "plants_demo_group": {
      "group": "Plants (Demo)",
      "pages": [
        "api-reference/endpoint/delete",
        "api-reference/endpoint/webhook"
      ]
    }
  },
  "theme": "mint",
  "name": "FlowIQ API Documentation",
  "colors": {
    "primary": "#9333EA",
    "light": "#FF6B6B",
    "dark": "#7C2D92"
  },
  "favicon": "/logo.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              {
                "group": "FlowMod",
                "pages": ["index", "quickstart"]
              },
              {
                "group": "FlowIQ",
                "pages": ["flowiq-index", "flowiq-quickstart"]
              }
            ]
          }
        ]
      },
      {
        "tab": "FlowMod API",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Instance Management",
            "pages": ["api-reference/endpoint/get"]
          },
          {
            "group": "Messaging",
            "pages": [
              "api-reference/endpoint/create",
              "api-reference/endpoint/send-media",
              "api-reference/endpoint/send-audio",
              "api-reference/endpoint/send-location",
              "api-reference/endpoint/send-poll",
              "api-reference/endpoint/send-contact",
              "api-reference/endpoint/send-reaction"
            ]
          },
          {
            "group": "Group Management",
            "pages": [
              "api-reference/endpoint/create-group",
              "api-reference/endpoint/list-groups"
            ]
          }
        ]
      },
      {
        "tab": "FlowIQ API",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["flowiq-api-reference/introduction"]
          },
          {
            "group": "Endpoints",
            "pages": [
              "flowiq-api-reference/endpoint/conversations",
              "flowiq-api-reference/endpoint/contact",
              "flowiq-api-reference/endpoint/send-whatsapp"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.flowiq.live",
          "icon": "square-terminal"
        },
        {
          "anchor": "Support",
          "href": "mailto:dev@flowapt.com",
          "icon": "envelope"
        },
        {
          "anchor": "Flowapt",
          "href": "https://flowapt.com",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/light-top-left.png",
    "dark": "/dark-top-left.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:dev@flowapt.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.flowiq.live/flowmod"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/flowapt",
      "github": "https://github.com/flowapt",
      "linkedin": "https://linkedin.com/company/flowapt"
    }
  },
  "openapi": ["api-reference/openapi.json", "flowiq-api-reference/openapi.json"]
}

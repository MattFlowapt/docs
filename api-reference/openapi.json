{
  "openapi": "3.1.0",
  "info": {
    "title": "FlowMod API",
    "description": "FlowMod API provides programmatic access to your WhatsApp instance. Send messages, manage groups, handle webhooks, and integrate WhatsApp functionality into your applications.",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.flowmod.ai",
      "description": "FlowMod API Production Server"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "paths": {
    "/instance/connectionState/{instanceName}": {
      "get": {
        "summary": "Check Connection Status",
        "description": "Check the connection status of your WhatsApp instance. Returns the current state of the connection.",
        "parameters": [
          {
            "name": "instanceName",
            "in": "path",
            "required": true,
            "description": "The name of your FlowMod instance",
            "schema": {
              "type": "string",
              "example": "my-whatsapp-instance"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Connection status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "state": {
                      "type": "string",
                      "enum": ["open", "connecting", "close"],
                      "description": "Current connection state"
                    },
                    "instance": {
                      "type": "object",
                      "properties": {
                        "instanceName": {
                          "type": "string",
                          "description": "Name of the instance"
                        },
                        "status": {
                          "type": "string",
                          "description": "Instance status"
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "connected": {
                    "summary": "Connected instance",
                    "value": {
                      "state": "open",
                      "instance": {
                        "instanceName": "my-whatsapp-instance",
                        "status": "connected"
                      }
                    }
                  },
                  "disconnected": {
                    "summary": "Disconnected instance",
                    "value": {
                      "state": "close",
                      "instance": {
                        "instanceName": "my-whatsapp-instance",
                        "status": "disconnected"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Instance not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": ["Instance Management"]
      }
    },
    "/message/sendText/{instanceName}": {
      "post": {
        "summary": "Send Text Message",
        "description": "Send a text message to a WhatsApp number through your connected instance.",
        "parameters": [
          {
            "name": "instanceName",
            "in": "path",
            "required": true,
            "description": "The name of your FlowMod instance",
            "schema": {
              "type": "string",
              "example": "my-whatsapp-instance"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["number", "text"],
                "properties": {
                  "number": {
                    "type": "string",
                    "description": "WhatsApp number in international format (without +)",
                    "example": "1234567890"
                  },
                  "text": {
                    "type": "string",
                    "description": "Text message to send",
                    "example": "Hello from FlowMod API!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "object",
                      "properties": {
                        "remoteJid": {
                          "type": "string",
                          "description": "Recipient WhatsApp ID"
                        },
                        "fromMe": {
                          "type": "boolean",
                          "description": "Whether message is from sender"
                        },
                        "id": {
                          "type": "string",
                          "description": "Message ID"
                        }
                      }
                    },
                    "message": {
                      "type": "object",
                      "properties": {
                        "conversation": {
                          "type": "string",
                          "description": "The sent message text"
                        }
                      }
                    },
                    "messageTimestamp": {
                      "type": "number",
                      "description": "Unix timestamp of message"
                    },
                    "status": {
                      "type": "string",
                      "description": "Message status"
                    }
                  }
                },
                "example": {
                  "key": {
                    "remoteJid": "1234567890@s.whatsapp.net",
                    "fromMe": true,
                    "id": "3EB0C431D6C2E46E5B6F"
                  },
                  "message": {
                    "conversation": "Hello from FlowMod API!"
                  },
                  "messageTimestamp": 1642678800,
                  "status": "sent"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Instance not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": ["Messaging"]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "apikey",
        "description": "Enter your FlowMod API key"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "required": ["error", "message"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error type"
          },
          "message": {
            "type": "string",
            "description": "Error message"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Instance Management",
      "description": "Manage your WhatsApp instance connection and status"
    },
    {
      "name": "Messaging",
      "description": "Send messages through your WhatsApp instance"
    }
  ]
}